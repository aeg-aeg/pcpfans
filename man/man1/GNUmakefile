TOPDIR = ../..
include $(TOPDIR)/src/include/builddefs
-include ./GNUlocaldefs

MAN_SECTION	= 1
MAN_PAGES	= $(shell echo *.1)
MAN_DEST	= $(PCP_MAN_DIR)/man$(MAN_SECTION)

default :: default_pcp 

default_pcp : $(MAN_PAGES)

include $(BUILDRULES)

install :: install_pcp

install_pcp : default_pcp
	$(INSTALL_MAN)
